{
  "name": "gitea-actions-vscode-plugin",
  "displayName": "Gitea Actions",
  "description": "View and inspect Gitea Actions workflow runs directly from VS Code / Cursor.",
  "icon": "resources/gitea-actions-icon.png",
  "version": "1.5.0",
  "publisher": "tarkil",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tarkilhk/gitea-actions-vscode-plugin"
  },
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onView:giteaActions.runs",
    "onView:giteaActions.runsPinned",
    "onCommand:giteaActions.refresh",
    "onCommand:giteaActions.setToken",
    "onCommand:giteaActions.clearToken",
    "onCommand:giteaActions.testConnection",
    "onCommand:giteaActions.viewJobLogs",
    "onCommand:giteaActions.openInBrowser",
    "onCommand:giteaActions.pinRepo",
    "onCommand:giteaActions.unpinRepo"
  ],
  "main": "./dist/extension.js",
  "scripts": {
    "compile": "node esbuild.js --production",
    "watch": "node esbuild.js --watch",
    "lint": "eslint .",
    "package": "npm run compile && npx @vscode/vsce package",
    "release": "node scripts/release.js",
    "release:patch": "node scripts/release.js patch",
    "release:minor": "node scripts/release.js minor",
    "release:major": "node scripts/release.js major"
  },
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Gitea Actions",
      "properties": {
        "giteaActions.baseUrl": {
          "type": "string",
          "default": "",
          "description": "Base URL of your Gitea instance (e.g. http://localhost:3000)."
        },
        "giteaActions.tls.insecureSkipVerify": {
          "type": "boolean",
          "default": false,
          "description": "Skip TLS certificate verification (not recommended)."
        },
        "giteaActions.discovery.mode": {
          "type": "string",
          "enum": [
            "workspace",
            "pinned",
            "allAccessible"
          ],
          "default": "workspace",
          "description": "How repositories are discovered: from workspace remotes, pinned list, or (optionally) all accessible repos via API."
        },
        "giteaActions.refresh.runningIntervalSeconds": {
          "type": "number",
          "default": 15,
          "minimum": 5,
          "description": "Polling interval (seconds) while runs are queued or running."
        },
        "giteaActions.refresh.idleIntervalSeconds": {
          "type": "number",
          "default": 60,
          "minimum": 10,
          "description": "Polling interval (seconds) while idle."
        },
        "giteaActions.maxRunsPerRepo": {
          "type": "number",
          "default": 20,
          "minimum": 1,
          "description": "Maximum number of recent runs to fetch per repository."
        },
        "giteaActions.maxJobsPerRun": {
          "type": "number",
          "default": 50,
          "minimum": 1,
          "description": "Maximum number of jobs to request per workflow run."
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "giteaActions",
          "title": "Gitea Actions",
          "icon": "resources/gitea-actions-activitybar.png"
        }
      ]
    },
    "views": {
      "giteaActions": [
        {
          "type": "tree",
          "id": "giteaActions.runs",
          "name": "Runs (Workspace)"
        },
        {
          "type": "tree",
          "id": "giteaActions.runsPinned",
          "name": "Runs (Pinned)"
        }
      ]
    },
    "commands": [
      {
        "command": "giteaActions.refresh",
        "title": "Gitea Actions: Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "giteaActions.setToken",
        "title": "Gitea Actions: Set Token"
      },
      {
        "command": "giteaActions.clearToken",
        "title": "Gitea Actions: Clear Token"
      },
      {
        "command": "giteaActions.testConnection",
        "title": "Gitea Actions: Test Connection"
      },
      {
        "command": "giteaActions.viewJobLogs",
        "title": "View Logs"
      },
      {
        "command": "giteaActions.openInBrowser",
        "title": "Open in Browser"
      },
      {
        "command": "giteaActions.pinRepo",
        "title": "Gitea Actions: Pin Repository"
      },
      {
        "command": "giteaActions.unpinRepo",
        "title": "Gitea Actions: Unpin Repository"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "giteaActions.refresh",
          "when": "view == giteaActions.runs || view == giteaActions.runsPinned",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "giteaActions.viewJobLogs",
          "when": "(view == giteaActions.runs || view == giteaActions.runsPinned) && (viewItem == giteaJob || viewItem == giteaStep)",
          "group": "inline"
        },
        {
          "command": "giteaActions.refresh",
          "when": "(view == giteaActions.runs || view == giteaActions.runsPinned) && (viewItem == giteaRepo || viewItem == giteaRepoPinned)",
          "group": "inline"
        },
        {
          "command": "giteaActions.openInBrowser",
          "when": "(view == giteaActions.runs || view == giteaActions.runsPinned) && (viewItem == giteaRun || viewItem == giteaJob)",
          "group": "inline@2"
        },
        {
          "command": "giteaActions.pinRepo",
          "when": "(view == giteaActions.runs || view == giteaActions.runsPinned) && viewItem == giteaRepo",
          "group": "inline"
        },
        {
          "command": "giteaActions.unpinRepo",
          "when": "(view == giteaActions.runs || view == giteaActions.runsPinned) && viewItem == giteaRepoPinned",
          "group": "inline"
        }
      ]
    }
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "@types/vscode": "^1.105.0",
    "typescript": "^5.9.3",
    "@vscode/vsce": "^3.7.1",
    "esbuild": "^0.24.0",
    "eslint": "^9.39.2",
    "@eslint/js": "^9.39.2",
    "@typescript-eslint/parser": "^8.46.0",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "typescript-eslint": "^8.46.0"
  },
  "dependencies": {
    "undici": "^7.18.2"
  }
}
