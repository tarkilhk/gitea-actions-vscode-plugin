{
  "name": "gitea-actions-vscode-plugin",
  "displayName": "Gitea Actions",
  "description": "View and inspect Gitea Actions workflow runs directly from VS Code / Cursor. Monitor CI/CD pipelines, check job status, view logs, and manage secrets and variables for your Gitea Actions workflows.",
  "icon": "resources/gitea-actions-icon.png",
  "version": "2.1.1",
  "publisher": "tarkil",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tarkilhk/gitea-actions-vscode-plugin"
  },
  "keywords": [
    "gitea",
    "actions",
    "gitea actions",
    "workflows",
    "pipeline",
    "devops",
    "jobs",
    "runs",
    "logs",
    "secrets",
    "variables"
  ],
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "scripts": {
    "compile": "node esbuild.js --production",
    "watch": "node esbuild.js --watch",
    "lint": "eslint .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "package": "npm run compile && npx @vscode/vsce package",
    "release": "node scripts/release.js",
    "release:patch": "node scripts/release.js patch",
    "release:minor": "node scripts/release.js minor",
    "release:major": "node scripts/release.js major"
  },
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Gitea Actions",
      "properties": {
        "giteaActions.baseUrl": {
          "type": "string",
          "default": "",
          "description": "Base URL of your Gitea instance (e.g. http://localhost:3000)."
        },
        "giteaActions.tls.insecureSkipVerify": {
          "type": "boolean",
          "default": false,
          "description": "Skip TLS certificate verification (not recommended)."
        },
        "giteaActions.discovery.mode": {
          "type": "string",
          "enum": [
            "workspace",
            "allAccessible"
          ],
          "default": "workspace",
          "description": "How repositories are discovered: from workspace remotes or all accessible repos via API."
        },
        "giteaActions.refresh.runningIntervalSeconds": {
          "type": "number",
          "default": 15,
          "minimum": 5,
          "description": "Polling interval (seconds) while runs are queued or running."
        },
        "giteaActions.refresh.idleIntervalSeconds": {
          "type": "number",
          "default": 60,
          "minimum": 10,
          "description": "Polling interval (seconds) while idle."
        },
        "giteaActions.maxRunsPerRepo": {
          "type": "number",
          "default": 20,
          "minimum": 1,
          "description": "Maximum number of recent runs to fetch per repository."
        },
        "giteaActions.maxJobsPerRun": {
          "type": "number",
          "default": 50,
          "minimum": 1,
          "description": "Maximum number of jobs to request per workflow run."
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "giteaActions",
          "title": "Gitea Actions",
          "icon": "resources/gitea-actions-activitybar.png"
        }
      ]
    },
    "views": {
      "giteaActions": [
        {
          "type": "tree",
          "id": "giteaActions.runs",
          "name": "Workflow Runs"
        },
        {
          "type": "tree",
          "id": "giteaActions.runsPinned",
          "name": "Workflows"
        },
        {
          "type": "tree",
          "id": "giteaActions.settings",
          "name": "Settings"
        }
      ]
    },
    "commands": [
      {
        "command": "giteaActions.refresh",
        "title": "Gitea Actions: Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "giteaActions.setToken",
        "title": "Set",
        "icon": "$(pencil)"
      },
      {
        "command": "giteaActions.clearToken",
        "title": "Clear",
        "icon": "$(trash)"
      },
      {
        "command": "giteaActions.testConnection",
        "title": "Gitea Actions: Test Connection"
      },
      {
        "command": "giteaActions.viewJobLogs",
        "title": "View Logs",
        "icon": "$(list-unordered)"
      },
      {
        "command": "giteaActions.openInBrowser",
        "title": "Open in Browser",
        "icon": "$(globe)"
      },
      {
        "command": "giteaActions.refreshSecrets",
        "title": "Refresh Secrets",
        "icon": "$(refresh)"
      },
      {
        "command": "giteaActions.refreshVariables",
        "title": "Refresh Variables",
        "icon": "$(refresh)"
      },
      {
        "command": "giteaActions.createSecret",
        "title": "Add Secret",
        "icon": "$(add)"
      },
      {
        "command": "giteaActions.updateSecret",
        "title": "Update Secret",
        "icon": "$(pencil)"
      },
      {
        "command": "giteaActions.deleteSecret",
        "title": "Delete Secret",
        "icon": "$(trash)"
      },
      {
        "command": "giteaActions.createVariable",
        "title": "Add Variable",
        "icon": "$(add)"
      },
      {
        "command": "giteaActions.updateVariable",
        "title": "Update Variable",
        "icon": "$(pencil)"
      },
      {
        "command": "giteaActions.deleteVariable",
        "title": "Delete Variable",
        "icon": "$(trash)"
      },
      {
        "command": "giteaActions.openBaseUrlSettings",
        "title": "Gitea Actions: Open Base URL Settings"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "giteaActions.refresh",
          "when": "view == giteaActions.runs || view == giteaActions.runsPinned",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "giteaActions.viewJobLogs",
          "when": "(view == giteaActions.runs || view == giteaActions.runsPinned) && (viewItem == giteaJob || viewItem == giteaStep)",
          "group": "inline"
        },
        {
          "command": "giteaActions.refresh",
          "when": "(view == giteaActions.runs || view == giteaActions.runsPinned) && viewItem == giteaRepo",
          "group": "inline"
        },
        {
          "command": "giteaActions.openInBrowser",
          "when": "(view == giteaActions.runs || view == giteaActions.runsPinned) && (viewItem == giteaRun || viewItem == giteaJob)",
          "group": "inline@2"
        },
        {
          "command": "giteaActions.refreshSecrets",
          "when": "view == giteaActions.settings && viewItem == giteaSecretsRoot",
          "group": "inline"
        },
        {
          "command": "giteaActions.createSecret",
          "when": "view == giteaActions.settings && viewItem == giteaSecretsRoot",
          "group": "inline@1"
        },
        {
          "command": "giteaActions.updateSecret",
          "when": "view == giteaActions.settings && viewItem == giteaSecret",
          "group": "inline"
        },
        {
          "command": "giteaActions.deleteSecret",
          "when": "view == giteaActions.settings && viewItem == giteaSecret",
          "group": "inline@1"
        },
        {
          "command": "giteaActions.refreshVariables",
          "when": "view == giteaActions.settings && viewItem == giteaVariablesRoot",
          "group": "inline"
        },
        {
          "command": "giteaActions.createVariable",
          "when": "view == giteaActions.settings && viewItem == giteaVariablesRoot",
          "group": "inline@1"
        },
        {
          "command": "giteaActions.updateVariable",
          "when": "view == giteaActions.settings && viewItem == giteaVariable",
          "group": "inline"
        },
        {
          "command": "giteaActions.deleteVariable",
          "when": "view == giteaActions.settings && viewItem == giteaVariable",
          "group": "inline@1"
        },
        {
          "command": "giteaActions.setToken",
          "when": "view == giteaActions.settings && viewItem == giteaToken",
          "group": "inline"
        },
        {
          "command": "giteaActions.clearToken",
          "when": "view == giteaActions.settings && viewItem == giteaToken",
          "group": "inline@1"
        }
      ]
    }
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^25.0.3",
    "@types/vscode": "^1.105.0",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "@vitest/coverage-v8": "^4.0.16",
    "@vscode/vsce": "^3.7.1",
    "esbuild": "^0.24.0",
    "eslint": "^9.39.2",
    "msw": "^2.12.7",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.0",
    "vitest": "^4.0.16"
  },
  "dependencies": {
    "undici": "^7.18.2"
  }
}
